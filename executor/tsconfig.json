{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": [
      "bun"
    ],
    "lib": [
      "ESNext",
      "DOM"
    ],
    "paths": {
      "*": [
        "./*"
      ],
      "convex": [
        "../node_modules/convex"
      ],
      "convex/*": [
        "../node_modules/convex/*"
      ],
      "convex-helpers": [
        "../node_modules/convex-helpers"
      ],
      "convex-helpers/*": [
        "../node_modules/convex-helpers/*"
      ]
    }
  },
  "include": [
    "packages/database/**/*.ts",
    "packages/core/src/**/*.ts",
    "scripts/**/*.ts",
    "executor.ts"
  ]
}
