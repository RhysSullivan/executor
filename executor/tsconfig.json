{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": [
      "bun"
    ],
    "lib": [
      "ESNext",
      "DOM"
    ],
    "baseUrl": "."
  },
  "include": [
    "packages/database/**/*.ts",
    "packages/runner-node/**/*.ts",
    "packages/core/src/**/*.ts",
    "scripts/**/*.ts",
    "executor.ts"
  ]
}
