{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "convex": ["../../../node_modules/convex"],
      "convex/*": ["../../../node_modules/convex/*"],
      "convex-helpers": ["../../../node_modules/convex-helpers"],
      "convex-helpers/*": ["../../../node_modules/convex-helpers/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
