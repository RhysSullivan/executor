{
  "name": "executor-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run dev:convex",
    "dev:convex": "bunx convex dev",
    "dev:web": "bun run --cwd apps/web dev",
    "dev:all": "bun run dev:convex & bun run dev:web",
    "start": "bun run dev:convex",
    "convex:codegen": "bunx convex codegen",
    "test": "bun test",
    "typecheck": "bunx tsc --noEmit -p tsconfig.json"
  },
  "dependencies": {
    "@convex-dev/stripe": "^0.1.3",
    "@convex-dev/workos-authkit": "^0.1.6",
    "@workos-inc/node": "^8.2.0",
    "convex": "^1.31.7",
    "convex-helpers": "^0.1.111"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@types/bun": "latest",
    "convex-test": "^0.0.41",
    "typescript": "latest"
  }
}
