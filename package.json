{
  "name": "proto-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "executor/apps/*",
    "executor/packages/*",
    "executor/infra",
    "sources",
    "assistant",
    "assistant/packages/*"
  ],
  "scripts": {
    "with-env": "bun run --env-file=.env --",
    "dev": "bun run dev.ts",
    "kill:all": "bun run kill-all.ts",
    "dev:sources": "bun run --cwd sources dev",
    "sources:sync": "bun run --cwd sources sync",
    "dev:executor:convex": "bunx --cwd executor convex dev",
    "dev:executor:web": "bun run --cwd executor/apps/web dev",
    "dev:executor:menubar": "bun run --cwd executor/apps/menubar dev",
    "dev:executor:all": "bun run dev:executor:convex & bun run dev:executor:web",
    "dev:assistant": "bun run --cwd assistant/packages/server dev",
    "dev:bot": "bun run --cwd assistant/packages/bot dev",
    "test": "bun run test:executor && bun run test:assistant",
    "test:executor": "bun run --cwd executor test",
    "test:executor:integration": "bun run --cwd executor test:integration",
    "test:executor:e2e": "bun run --cwd executor test:e2e",
    "test:executor:all": "bun run --cwd executor test:all",
    "test:assistant": "bun run --cwd assistant test",
    "typecheck": "bun run typecheck:workspaces",
    "typecheck:slow": "bun run typecheck:workspaces:slow",
    "typecheck:workspaces": "bun run --filter \"@executor/*\" --filter \"executor-infra\" --filter \"@proto/sources\" --filter \"@assistant/*\" --filter \"@openassistant/reacord\" --if-present typecheck",
    "typecheck:workspaces:slow": "bun run --filter \"@executor/*\" --filter \"executor-infra\" --filter \"@proto/sources\" --filter \"@assistant/*\" --filter \"@openassistant/reacord\" --if-present typecheck:slow",
    "typecheck:executor": "bunx --package @typescript/native-preview tsgo --noEmit -p executor/tsconfig.json",
    "typecheck:executor:slow": "bunx tsc --noEmit -p executor/tsconfig.json",
    "typecheck:assistant": "bunx --package @typescript/native-preview tsgo --noEmit -p assistant/packages/server/tsconfig.json && bunx --package @typescript/native-preview tsgo --noEmit -p assistant/packages/bot/tsconfig.json",
    "typecheck:assistant:slow": "bunx tsc --noEmit -p assistant/packages/server/tsconfig.json && bunx tsc --noEmit -p assistant/packages/bot/tsconfig.json",
    "knip": "bunx knip --config knip.json",
    "db:clear:executor": "bun with-env bun run executor/scripts/dev/wipe/convex-db.ts",
    "convex:codegen": "bunx --cwd executor convex codegen"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "@convex-dev/migrations": "^0.3.1",
    "@convex-dev/stripe": "^0.1.3",
    "@convex-dev/workos-authkit": "^0.1.6",
    "@workos-inc/node": "^8.2.0",
    "convex": "^1.31.7",
    "convex-helpers": "^0.1.111",
    "jose": "^6.1.0",
    "openapi-typescript": "^7.12.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@types/bun": "latest",
    "convex-test": "^0.0.41",
    "typescript": "^5.9.3",
    "@typescript/native-preview": "7.0.0-dev.20260216.1"
  }
}
